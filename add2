#include <stdio.h>
#include "myBigChars.h"

// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—á–∞—Ç–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ —Ç–µ—Å—Ç–∞
void print_test_result(char* test_string, int expected) {
    int result = bc_strlen(test_string);
    printf("–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —Å—Ç—Ä–æ–∫–∏: %s\n–û–∂–∏–¥–∞–µ–º–∞—è –¥–ª–∏–Ω–∞: %d, –ü–æ–ª—É—á–µ–Ω–Ω–∞—è –¥–ª–∏–Ω–∞: %d\n",
           test_string, expected, result);
}

int main() {
    // –¢–µ—Å—Ç —Å –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–π –æ–¥–Ω–æ–±–∞–π—Ç–Ω–æ–π —Å—Ç—Ä–æ–∫–æ–π
    print_test_result("Hello", 5);

    // –¢–µ—Å—Ç —Å UTF-8 —Å—Ç—Ä–æ–∫–∞–º–∏
    print_test_result("\xC2\xA2", 1); // —Å–∏–º–≤–æ–ª ¬¢ (—Ü–µ–Ω—Ç)
    print_test_result("\xE2\x82\xAC", 1); // —Å–∏–º–≤–æ–ª ‚Ç¨ (–µ–≤—Ä–æ)
    print_test_result("\xF0\x9F\x92\xA9", 1); // —Å–∏–º–≤–æ–ª üí© (–ø—É–ø—Å)

    // –¢–µ—Å—Ç—ã —Å –Ω–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–º–∏ UTF-8 –ø–æ—Å–ª–µ–¥–æ–≤–∞—Ç–µ–ª—å–Ω–æ—Å—Ç—è–º–∏
    print_test_result("\xC2\x20", 0); // –Ω–µ–≤–∞–ª–∏–¥–Ω–æ–µ –ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ
    print_test_result("\xE2\x82\x20", 0); // –Ω–µ–≤–∞–ª–∏–¥–Ω–æ–µ –ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ
    print_test_result("\xF0\x9F\x20\xA9", 0); // –Ω–µ–≤–∞–ª–∏–¥–Ω–æ–µ –ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ

    return 0;
}

// mines.cpp
#include "Board.hpp"
#include <iostream>
#include <sstream>
#include <vector>
#include <string>

int main() {
    int rows, cols, mines_count;
    std::cout << "Enter rows, columns and number of mines: ";
    std::cin >> rows >> cols >> mines_count;

    std::vector<std::pair<int, int>> mines_coords;
    std::cout << "Enter mine coordinates (row col):" << std::endl;
    for (int i = 0; i < mines_count; ++i) {
        int r, c;
        std::cin >> r >> c;
        mines_coords.emplace_back(r, c);
    }

    Board board(rows, cols, mines_coords);
    std::string command;
    while (true) {
        board.print(std::cout);
        std::cout << "Enter command (open/flag row col / exit): ";
        std::cin >> command;

        if (command == "exit") {
            break;
        } else if (command == "open") {
            int r, c;
            std::cin >> r >> c;
            board.open(r, c);
            if (board.is_winner()) {
                std::cout << "You win!\n"; // Изменение здесь
                break;
            }
        } else if (command == "flag") {
            int r, c;
            std::cin >> r >> c;
            board.flag(r, c);
        }
    }
    return 0;
}

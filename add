#include "myBigChars.h"

int bc_strlen (char *str)
{
    if (!str)
    {
        return 0;
    }

    int counter = 0;
    for (int i = 0; str[i] != '\n';)
    {
        if (str[i] == 0x80)
        {
            counter++;
            i++;
        }
        else if (str[i] == 0xC0)
        {
            if ((str[i+1] & 0xC0) == 0x80) {
                counter++;
                i += 2;
            } else {
                return 0;  // Некорректное продолжение символа
            }
        }
        else if (str[i] == 0xE0)
        {
            if ((str[i+1] & 0xC0) == 0x80 && (str[i+2] & 0xC0) == 0x80) {
                counter++;
                i += 3;
            } else {
                return 0;  // Некорректное продолжение символа
            }
        }
        else if (str[i] == 0xF0)
        {
            if ((str[i+1] & 0xC0) == 0x80 && (str[i+2] & 0xC0) == 0x80 && (str[i+3] & 0xC0) == 0x80) {
                counter++;
                i += 4;
            } else {
                return 0;  // Некорректное продолжение символа
            }
        }
        else
        {
            return 0;
        }
    }
    return counter;
}

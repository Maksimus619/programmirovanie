  position: relative;
  width: 80%;
  margin: 0 auto;
}

.slider {
  display: flex;
  width: 100%;
  overflow: hidden;
}

img {
  width: 100%;
  transition: transform 0.5s ease-in-out;
}

.prev-btn,
.next-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24px;
  background: none;
  border: none;
  cursor: pointer;
}

.prev-btn {
  left: 10px;

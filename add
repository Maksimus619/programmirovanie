  position: relative;
  width: 80%;
  margin: 0 auto;
  overflow: hidden;
}

.slider {
  display: flex;
  width: 300%; /* Три слайда, каждый на 100% ширины контейнера */
  transition: transform 0.5s ease-in-out;
}

.slide {
  flex: 0 0 33.333%; /* Каждый слайд занимает 1/3 ширины контейнера */
}

